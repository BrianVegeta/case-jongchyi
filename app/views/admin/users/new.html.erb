<div class="row">
  <div class="col-sm-6">
    <h1>新增管理員</h1>

    <%= form_for [:admin, @user], :html => { :role => "form", autocomplete: 'off' } do |f| %>
    
    <div class="form-group">
      <%= f.label :'帳號' %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :'密碼' %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :'再次輸入密碼' %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "確定新增", class: "btn btn-primary" %>
      </div>
    </div>    
    
    <% end %>

  </div>
</div>