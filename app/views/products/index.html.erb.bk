<style type="text/css">
  #categories a {
    text-decoration: none;
  }
  #categories > div {
    padding-top: 10px;
  }
  #current-cate {
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
  }
  a.product_item {
    color: #373737;
  }
  .modal .modal-dialog {
    width: 80%;
    margin: auto;
  }
  #watch {
    width: 28px;
    height: 28px;
  }
  #watch img {
    width: 100%;
    margin-left: 37px;
  }
  .fa.clock {
    width: 26px;
    height: 26px;
    margin: 0 1px 1px 1px;
    background-image: url('<%= asset_path("clock-time-3.png") %>');
    background-repeat: no-repeat;
    background-size: 26px Auto;
  }
  .watches-title {
    margin-top: -4px;
  }
  @media (max-width: 768px) {
      .modal .modal-dialog {
        width: 94%;
      }
      #watch img {
        width: 100%;
        margin-left: 131px;
      }
      #categories a p {
        font-size: 14px;
      }
  }
  @media (max-width: 460px) {
      .modal .modal-dialog {
        width: 94%;
      }
      #watch img {
        width: 100%;
        margin-left: 131px;
      }
      #categories a p {
        font-size: 12px;
      }
      #categories {
        padding-left: 0;
        padding-right: 0;
      }
      #product_list h1.cates-title {
        font-size: 22px;
      }
  }
</style>
<br>
<br>
<br>
<br>
<div id="categories" class="col-sm-10 col-sm-offset-1">
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[1] %>">
    <a href="<%= products_path(1, Product.cates[1]) %>">
      <i class="fa clock fa-2x"></i>
      <br>
      <p class="watches-title"><%= t 'product.category.watches' %></p>
    </a>
  </div>
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[5] %>">
    <a href="<%= products_path(5, Product.cates[5]) %>">
      <span class="fa-stack">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa fa-flash fa-stack-1x fa-inverse"></i>
      </span>
      <br>
      <p><%= t 'product.category.precious_metals' %></p>
    </a>
  </div>
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[9] %>">
    <a href="<%= products_path(9, Product.cates[9]) %>">
      <i class="fa fa-camera-retro fa-2x"></i>
      <br>
      <p>
        <%= t 'product.category.photoelectric' %>
      </p>
    </a>
  </div>
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[13] %>">
    <a href="<%= products_path(13, Product.cates[13]) %>">
      <i class="fa fa-flask fa-2x"></i>
      <br>
      <p>
        <%= t 'product.category.polymer_materials' %>
      </p>
    </a>
  </div>
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[17] %>">
    <a href="<%= products_path(17, Product.cates[17]) %>">
      <i class="fa fa-inbox fa-2x"></i>
      <br>
      <p>
        <%= t 'product.category.chassis_aluminum' %>
      </p>
    </a>
  </div>
  <div class="col-xs-4 col-md-2 text-center" id="<%= @is_current_cate[21] %>">
    <a href="<%= products_path(21, Product.cates[21]) %>">
      <i class="fa fa-wrench fa-2x"></i>
      <br>
      <p>
        <%= t 'product.category.exclusive_custom' %>
      </p>
    </a>
  </div>
</div>
<div class="col-xs-12 col-md-10 col-sm-offset-1">
  <hr>
</div>
<div id="product_list" class="col-xs-12 col-md-10 col-sm-offset-1">
  <% @products.each_pair do |k, sub_products|%>
    <div class="col-sm-12">
      <h1 class="cates-title"><%=raw @sub_cates[k] %></h1>
      <br>
      <% sub_products.in_groups_of(4, false) do |products|%>
        <div class="row">
          <% products.each do |product| %>
            <div class="col-sm-3">
              <a href="#<%= product.id %>" class="product_item" data-product-id="<%= product.id %>" >
                <div>
                  <%= image_tag(product.photo.avatar.url(:small), class: 'img-rounded') %>
                </div>
                <h4 class="text-center"><%= product.trans_title %> </h4>
              </a>
              <br>
              <br>
            </div>
          <% end -%>
        </div>
      <% end -%>
    </div>
  <% end -%>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <%= image_tag('missing.jpg', class: 'img-rounded', id: 'product_image') %>
          </div>
          <div class="col-sm-6">
            <div id="product_content">

            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  var show_product_path = '<%= product_path(:id, :json) %>';
  $('.product_item').click(function() {
    var product_path = show_product_path.replace('id', $(this).data('productId'));
    $.get(product_path, function(response) {
      $('#myModalLabel').html(response.title);
      $('#product_content').html(response.content);
      $('#product_image').attr('src', response.thumb);
      $('#myModal').modal('show');
    });

  });
</script>
