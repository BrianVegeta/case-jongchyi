<style type="text/css">
  #categories a {
    text-decoration: none;
  }
  a.product_item {
    color: #373737;
  }
  .modal .modal-dialog { 
    width: 80%; 
  }
  @media (max-width: 768px) {
    .modal .modal-dialog { 
      width: 90%; 
    }
  }
</style>
<br>
<br>
<br>
<br>
<div id="categories" class="col-sm-10 col-sm-offset-1">
  <div class="col-sm-2 text-center">
    <a href="<%= products_path(1, Product.cates[1]) %>">
      <i class="fa fa-cogs fa-2x"></i>
      <br>
      <%= t 'product.category.watches' %>
    </a>
  </div>
  <div class="col-sm-2 text-center">
    <a href="<%= products_path(5, Product.cates[5]) %>">
      <span class="fa-stack">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa fa-flash fa-stack-1x fa-inverse"></i>
      </span>
      <br>
      <%= t 'product.category.precious_metals' %>
    </a>
  </div>  
  <div class="col-sm-2 text-center">
    <a href="<%= products_path(9, Product.cates[9]) %>">
      <i class="fa fa-camera-retro fa-2x"></i>
      <br>
      <%= t 'product.category.photoelectric' %>
    </a>
  </div>  
  <div class="col-sm-2 text-center">  
    <a href="<%= products_path(13, Product.cates[13]) %>">
      <i class="fa fa-flask fa-2x"></i>
      <br>
      <%= t 'product.category.polymer_materials' %>
    </a>
  </div>
  <div class="col-sm-2 text-center">
    <a href="<%= products_path(17, Product.cates[17]) %>">
      <i class="fa fa-inbox fa-2x"></i>
      <br>
      <%= t 'product.category.chassis_aluminum' %>
    </a>
  </div>
  <div class="col-sm-2 text-center">
    <a href="<%= products_path(21, Product.cates[21]) %>">
      <i class="fa fa-wrench fa-2x"></i>
      <br>
      <%= t 'product.category.exclusive_custom' %>
    </a>
  </div>
</div>
<div class="col-sm-10 col-sm-offset-1">
  <hr>
</div>
<div class="col-sm-10 col-sm-offset-1">
  <% @products.each_pair do |k, sub_products|%>
    <div class="col-sm-12">
      <h1><%= @sub_cates[k] %> <small><%= Product.cates[params[:category].to_i] %></small></h1>
      <br>
      <% sub_products.each do |product|%>
        <div class="col-sm-3">
          <a href="#<%= product.id %>" class="product_item" data-product-id="<%= product.id %>" >
            <div>
              <%= image_tag(product.photo.avatar.url(:thumb), class: 'img-rounded') %>
            </div>  
            <h4 class="text-center"><%= product.trans_title %> </h4>
          </a>  
        </div>
      <% end -%>
    </div>    
  <% end -%>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <%= image_tag('missing.jpg', class: 'img-rounded', id: 'product_image') %>
          </div>
          <div class="col-sm-6">
            <div id="product_content">

            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  var show_product_path = '<%= product_path(:id, :json) %>';
  $('.product_item').click(function() {
    var product_path = show_product_path.replace('id', $(this).data('productId'));
    $.get(product_path, function(response) {
      $('#myModalLabel').html(response.title);
      $('#product_content').html(response.content);
      $('#product_image').attr('src', response.thumb);
      $('#myModal').modal('show');
    });
    
  });
</script>